    <!-- Script del Asistente Virtual Chatbase -->
    <script>
        (function(){if(!window.chatbase||window.chatbase("getState")!=="initialized"){window.chatbase=(...arguments)=>{if(!window.chatbase.q){window.chatbase.q=[]}window.chatbase.q.push(arguments)};window.chatbase=new Proxy(window.chatbase,{get(target,prop){if(prop==="q"){return target.q}return(...args)=>target(prop,...args)}})}const onLoad=function(){const script=document.createElement("script");script.src="https://www.chatbase.co/embed.min.js";script.id="nR0Vyf2rsVb7db9d2sXKk";script.domain="www.chatbase.co";document.body.appendChild(script)};if(document.readyState==="complete"){onLoad()}else{window.addEventListener("load",onLoad)}})();
        
        // Función para abrir el chatbase
        function openChatbase() {
            if (window.chatbase && typeof window.chatbase === 'function') {
                window.chatbase('open');
            } else {
                alert('El asistente virtual se está cargando. Por favor, intente de nuevo en unos segundos.');
            }
        }
        
        // JavaScript para el menú móvil
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
            const nav = document.querySelector('nav');
            
            mobileMenuBtn.addEventListener('click', function() {
                nav.style.display = nav.style.display === 'block' ? 'none' : 'block';
            });
            
            // Ajustar navegación en redimensionamiento
            window.addEventListener('resize', function() {
                if (window.innerWidth > 768) {
                    nav.style.display = 'block';
                } else {
                    nav.style.display = 'none';
                }
            });
        });
    </script>
